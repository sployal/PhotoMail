<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3E5D67"
    android:padding="40dp">

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:hint="Enter Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonSaveCredentials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Save Credentials" />

    <TextView
        android:id="@+id/textViewInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:text="To obtain an app password from your Google account:\n
        \n1.Go to your GMail ...Manage MyGoogle Account
        \n2.Search for 'App passwords.' setting
        \n3. You may need to sign in again.
        \n4. At the bottom, choose 'Select app' and then 'Other (Custom name).' Enter a name, for example 'Email App.'
        \n5. Select 'Generate.'
         \n6. Copy the 16-character password that appears and paste it here." />

</LinearLayout>
